class Golondrina {
	var energia = 100

	method energia() {
		// XPECT errors --> "Super can only be used in an overriding method" at "super()"
		super()
		return energia
	}
	
	method comer(alimento, postre) {
		energia = energia + 2
	}

	method saltar() {
		energia -= 2
	}
	
	method jugar(tiempo) {
		energia += tiempo / 2
	}
	
	method estasCurada() = energia > 10
	
	method alegria(tiempo) = energia * tiempo 
}

class GolondrinaSarasa inherits Golondrina {
	var comio = false
	
	override method comer(a, p) {
		// XPECT errors --> "Incorrect number of arguments for super. Expecting 2: alimento, postre" at "super()"
		super()
		comio = true
	}
	
	// XPECT errors --> "It's a conceptual mistake to redefine a method that's like the superclass' method" at "jugar"
	override method jugar(tiempo) {
		super(tiempo)
	}
	
	// XPECT errors --> "It's a conceptual mistake to redefine a method that's like the superclass' method" at "alegria"
	override method alegria(tiempo) {
		return super(tiempo)	
	}	

	// XPECT errors --> "It's a conceptual mistake to redefine a method that's like the superclass' method" at "saltar"
	override method saltar() {
		super()
	}
	
	// XPECT errors --> "It's a conceptual mistake to redefine a method that's like the superclass' method" at "estasCurada"
	override method estasCurada() {
        return super()
    }
    	
}

class GolondrinaLoca inherits Golondrina {
	// ok to override this
	override method jugar(tiempo) {
		super(tiempo * 2)
	}
    
	// ok to override this
	override method alegria(tiempo) = return super(tiempo * 2)	
    
}

class GolondrinaRenga inherits Golondrina {
	// ok to override this
	override method jugar(tiempo) {
		super(1)
	}
	
	// XPECT errors --> "It's a conceptual mistake to redefine a method that's like the superclass' method" at "alegria"
	override method alegria(tiempo) = super(tiempo)

	// XPECT errors --> "It's a conceptual mistake to redefine a method that's like the superclass' method" at "estasCurada"
